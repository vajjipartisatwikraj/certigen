/* Modern Home Page - GenZ Aesthetic */

.home {
  min-height: 100vh;
  padding-bottom: var(--space-xl);
}

/* Hero Header */
.hero-header {
  position: relative;
  padding: 80px var(--space-lg) 120px;
  text-align: center;
  overflow: hidden;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
}

.hero-title {
  font-size: clamp(48px, 8vw, 80px);
  font-weight: 900;
  margin: 0 0 var(--space-md) 0;
  letter-spacing: -2px;
  line-height: 1.1;
}

.hero-subtitle {
  font-size: clamp(18px, 3vw, 24px);
  color: var(--text-secondary);
  margin: 0 0 var(--space-xl) 0;
  font-weight: 400;
}

.hero-actions {
  display: flex;
  gap: var(--space-md);
  justify-content: center;
  flex-wrap: wrap;
}

/* Floating Shapes */
.floating-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
  pointer-events: none;
}

.shape {
  position: absolute;
  border-radius: 50%;
  filter: blur(60px);
  opacity: 0.3;
  animation: float 6s ease-in-out infinite;
}

.shape-1 {
  width: 400px;
  height: 400px;
  background: var(--gradient-primary);
  top: -100px;
  left: -100px;
  animation-delay: 0s;
}

.shape-2 {
  width: 300px;
  height: 300px;
  background: var(--gradient-secondary);
  bottom: -80px;
  right: -80px;
  animation-delay: 2s;
}

.shape-3 {
  width: 250px;
  height: 250px;
  background: var(--gradient-success);
  top: 50%;
  right: 10%;
  animation-delay: 4s;
}

/* Stats Dashboard */
.stats-dashboard {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-lg);
  max-width: 1200px;
  margin: -60px auto var(--space-xl);
  padding: 0 var(--space-lg);
  position: relative;
  z-index: 3;
}

.stat-card {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-lg);
  transition: all var(--transition-base);
  cursor: default;
}

.stat-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: var(--shadow-glow);
}

.stat-icon {
  width: 64px;
  height: 64px;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
  flex-shrink: 0;
}

.stat-details {
  flex: 1;
}

.stat-value {
  font-size: 36px;
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
}

.stat-label {
  font-size: 14px;
  color: var(--text-secondary);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-top: 4px;
}

/* Templates Section */
.templates-section {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
  gap: var(--space-md);
  flex-wrap: wrap;
}

.section-title {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
  letter-spacing: -1px;
}

.search-bar {
  flex: 1;
  max-width: 400px;
}

.search-bar .input-floating {
  margin: 0;
}

/* Loading State */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px var(--space-lg);
  gap: var(--space-md);
}

.loading-container p {
  color: var(--text-secondary);
  font-size: 16px;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 80px var(--space-xl);
  max-width: 600px;
  margin: 0 auto;
}

.empty-icon {
  font-size: 80px;
  margin-bottom: var(--space-md);
  animation: float 3s ease-in-out infinite;
}

.empty-state h2 {
  font-size: 28px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 var(--space-sm) 0;
}

.empty-state p {
  color: var(--text-secondary);
  font-size: 16px;
  margin: 0 0 var(--space-lg) 0;
  line-height: 1.6;
}

/* Templates Grid */
.templates-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: var(--space-lg);
  animation: fadeIn 0.6s ease-out;
}

.template-card {
  position: relative;
  overflow: hidden;
  transition: all var(--transition-base);
  animation: slideUp 0.5s ease-out backwards;
}

.template-card:hover {
  transform: translateY(-10px);
}

/* Template Preview */
.template-preview {
  position: relative;
  width: 100%;
  height: 220px;
  background: var(--dark-surface);
  overflow: hidden;
  border-radius: var(--radius-md);
  margin-bottom: var(--space-md);
}

.template-preview img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-base);
}

.template-card:hover .template-preview img {
  transform: scale(1.05);
}

.no-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--text-secondary);
  gap: var(--space-sm);
}

.no-image span {
  font-size: 48px;
}

.no-image p {
  font-size: 14px;
  margin: 0;
}

.template-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(10, 14, 39, 0.8);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity var(--transition-base);
}

.template-card:hover .template-overlay {
  opacity: 1;
}

/* Template Info */
.template-info {
  position: relative;
  padding: var(--space-md);
}

.template-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 var(--space-sm) 0;
  letter-spacing: -0.5px;
  padding-right: 40px;
}

.template-meta {
  display: flex;
  gap: var(--space-sm);
  margin-bottom: var(--space-md);
  flex-wrap: wrap;
}

.meta-badge {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 4px 12px;
  background: var(--dark-surface);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-full);
  font-size: 12px;
  color: var(--text-secondary);
  font-weight: 600;
}

.template-actions {
  display: flex;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

.template-delete {
  position: absolute;
  top: var(--space-md);
  right: var(--space-md);
  width: 36px;
  height: 36px;
  background: var(--dark-surface);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all var(--transition-base);
  font-size: 16px;
}

.template-delete:hover {
  background: var(--coral-pink);
  border-color: var(--coral-pink);
  transform: scale(1.1) rotate(10deg);
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero-header {
    padding: 60px var(--space-md) 100px;
  }
  
  .stats-dashboard {
    grid-template-columns: 1fr;
    margin: -40px auto var(--space-lg);
  }
  
  .section-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .search-bar {
    width: 100%;
    max-width: 100%;
  }
  
  .templates-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }
  
  .hero-actions {
    flex-direction: column;
    width: 100%;
  }
  
  .hero-actions .btn {
    width: 100%;
  }
}
}

.template-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  margin-top: 15px;
}

.template-actions button {
  font-size: 12px;
  padding: 8px;
}

@media (max-width: 768px) {
  .home-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 15px;
  }

  .templates-grid {
    grid-template-columns: 1fr;
  }
}
